                "tags": [
                    "Authentication"
                ],
                "summary": "Đăng ký tài khoản mới",
                "operationId": "c7bb21a0d87049e161b8e4c9b0d909f2",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
