        "/api/cart": {
            "get": {
                "tags": [
                    "Cart"
                ],
                "summary": "Lấy danh sách giỏ hàng",
                "operationId": "7fdb9b40bd4ad2baf12aa15164eab788",
                "parameters": [
                    {
                        "name": "X-Session-ID",
                        "in": "header",
                        "description": "Session ID cho khách vãng lai (nếu chưa login)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Danh sách sản phẩm trong giỏ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "total_items": {
                                            "type": "integer"
                                        },
                                        "total_price": {
                                            "type": "number"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/cart/add": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Thêm sản phẩm vào giỏ hàng",
                "operationId": "1fd304ca79daacf6570caa5e412bccc7",
                "parameters": [
                    {
                        "name": "X-Session-ID",
                        "in": "header",
                        "description": "Session ID cho khách vãng lai (nếu chưa login)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "product_id",
                                    "quantity"
                                ],
                                "properties": {
                                    "product_id": {
                                        "description": "ID sản phẩm",
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "description": "Số lượng",
                                        "type": "integer"
                                    },
                                    "variant_id": {
                                        "description": "ID biến thể (nếu có)",
                                        "type": "integer",
                                        "nullable": true
                                    },
                                    "session_id": {
                                        "description": "Session ID gửi trong body (dự phòng)",
                                        "type": "string",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Thêm vào giỏ thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Đã thêm vào giỏ"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Lỗi validate dữ liệu"
                    },
                    "400": {
                        "description": "Thiếu thông tin User/Session"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/cart/update/{id}": {
            "put": {
                "tags": [
                    "Cart"
                ],
                "summary": "Cập nhật số lượng sản phẩm trong giỏ",
                "operationId": "5d5ecf78ef1c152c09c7ec8629acf957",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID của mục trong giỏ hàng (cart_items.id)",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "X-Session-ID",
                        "in": "header",
                        "description": "Session ID cho khách vãng lai",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "quantity"
                                ],
                                "properties": {
                                    "quantity": {
                                        "description": "Số lượng mới",
                                        "type": "integer",
                                        "minimum": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cập nhật thành công"
                    },
                    "404": {
                        "description": "Không tìm thấy sản phẩm"
                    },
                    "403": {
                        "description": "Không có quyền truy cập"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/cart/remove/{id}": {
